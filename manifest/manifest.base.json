{
    "manifest_version": 3,
    "name": "Gemini Agent Extension",
    "version": "1.0.0",
    "description": "A modern AI-powered browser assistant.",
    "icons": {
        "16": "icons/icon16.svg",
        "48": "icons/icon48.svg",
        "128": "icons/icon128.svg"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "sidePanel"
    ],
    "host_permissions": [],
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Gemini Agent",
        "default_popup": "src/ui/popup/index.html"
    },
    "side_panel": {
        "default_path": "src/ui/sidebar/index.html"
    },
    "options_page": "src/ui/options/index.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}